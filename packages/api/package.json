{
    "name": "@did-btcr2/api",
    "version": "0.1.0",
    "type": "module",
    "description": "SDK for accessing the did:btcr2 method functionality.",
    "main": "./dist/cjs/index.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "browser": "./dist/browser.mjs",
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        },
        "./browser": {
            "type": "./dist/types/index.d.ts",
            "default": "./dist/browser.mjs"
        }
    },
    "typesVersions": {
        "*": {
            "browser": [
                "dist/types/index.d.ts"
            ]
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "license": "MPL-2.0",
    "contributors": [
        {
            "name": "dcdpr",
            "url": "https://github.com/dcdpr"
        },
        {
            "name": "jintekc",
            "url": "https://github.com/jintekc",
            "email": "github@jintek.consulting"
        }
    ],
    "homepage": "https://github.com/dcdpr/did-btcr2-js/tree/main/packages/api",
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com:dcdpr/did-btcr2-js.git",
        "directory": "packages/api"
    },
    "bugs": "https://github.com/dcdpr/did-btcr2-js/issues",
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "keywords": [
        "did",
        "dids",
        "decentralized identity",
        "decentralized identifiers",
        "did method",
        "did:btcr2",
        "btcr2",
        "api"
    ],
    "scripts": {
        "clean:build": "rimraf dist",
        "clean:tests": "rimraf coverage tests/compiled",
        "clean:deps": "rimraf node_modules pnpm-lock.json",
        "clean": "pnpm clean:build && pnpm clean:tests",
        "wipe": "pnpm clean && pnpm clean:deps",
        "reinstall": "pnpm install --force",
        "build": "pnpm clean:build && pnpm build:esm && pnpm build:cjs && pnpm build:browser",
        "build:esm": "rimraf dist/esm dist/types && pnpm tsc -p tsconfig.json",
        "build:cjs": "rimraf dist/cjs && tsc -p tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > ./dist/cjs/package.json",
        "build:browser": "rimraf dist/browser.mjs dist/browser.js && node build/bundles.js",
        "build:tests": "pnpm clean:tests && pnpm tsc -p tests/tsconfig.json",
        "build:all": "pnpm build && pnpm build:tests",
        "lint": "eslint . --max-warnings 0",
        "lint:fix": "eslint . --fix",
        "test": "pnpm c8 mocha",
        "build:test": "pnpm build && pnpm build:tests && pnpm c8 mocha",
        "build:lint": "pnpm build && pnpm build:tests && pnpm lint:fix",
        "prepublish": "pnpm build"
    },
    "dependencies": {
        "@bitcoinerlab/secp256k1": "^1.2.0",
        "@did-btcr2/bitcoin": "workspace:*",
        "@did-btcr2/common": "workspace:*",
        "@did-btcr2/cryptosuite": "workspace:*",
        "@did-btcr2/keypair": "workspace:*",
        "@did-btcr2/method": "workspace:*",
        "@helia/strings": "^4.0.2",
        "@noble/curves": "^1.8.1",
        "@noble/hashes": "^1.5.0",
        "@noble/secp256k1": "^2.1.0",
        "@scure/base": "^1.1.9",
        "@scure/bip32": "^1.5.0",
        "@scure/bip39": "^1.4.0",
        "@scure/btc-signer": "^1.8.1",
        "@web5/common": "^1.1.0",
        "@web5/crypto": "^1.0.6",
        "@web5/dids": "^1.2.0",
        "bitcoinjs-lib": "7.0.0-rc.0",
        "canonicalize": "^2.1.0",
        "dotenv": "^16.5.0",
        "helia": "^5.2.1",
        "multiformats": "^13.3.1",
        "nostr-tools": "^2.15.0",
        "tiny-secp256k1": "^2.2.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.22.0",
        "@types/chai": "^5.0.1",
        "@types/chai-as-promised": "^8.0.1",
        "@types/eslint": "^9.6.1",
        "@types/mocha": "^10.0.9",
        "@types/node": "^22.5.4",
        "@typescript-eslint/eslint-plugin": "^8.5.0",
        "@typescript-eslint/parser": "^8.5.0",
        "c8": "^10.1.2",
        "chai": "^5.1.2",
        "chai-as-promised": "^8.0.0",
        "esbuild": "^0.24.2",
        "eslint": "^9.14.0",
        "eslint-plugin-mocha": "^10.5.0",
        "globals": "^15.11.0",
        "mocha": "^10.8.2",
        "mocha-junit-reporter": "^2.2.1",
        "node-stdlib-browser": "^1.3.1",
        "rimraf": "^6.0.1",
        "typedoc-plugin-markdown": "^4.7.0",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.19.1"
    }
}